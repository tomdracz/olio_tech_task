<%= content_tag :div, id: "article-#{article.id}", class: 'article flex flex-col items-center bg-white border rounded-lg shadow-md md:flex-row md:max-w-xxl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 mb-4' do %>
  <%= image_tag article.photo, class: "article-image object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg", alt: article.title %>
    <div class="flex flex-col">
      <div class="flex flex-col justify-between p-4 leading-normal">
          <h2 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white"><%= article.title %></h2>
          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= article.description %></p>
      </div>
      <div class="flex flex-col justify-between p-4 leading-normal">
        <h3 class="text-md font-semibold tracking-tight text-gray-900 dark:text-white">Collection notes:</h3>
        <p class="font-normal mb-2 text-gray-700 dark:text-gray-400"><%= article.collection_notes %></p>
        <p class="font-normal text-gray-700 dark:text-gray-400">From: <%= article.user_name %>, <%= article.town %></p>
      </div>
    </div>
<% end %>
